<%-include('./public/header.ejs')%>


    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-lg-6">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">用户名</label>
                        <input type="text" class="form-control" id="username" placeholder="可以中文">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="密码，6位">
                    </div>

                    <button id="registBtn" type="button" class="btn btn-default">登陆</button>
                </form>
            </div>
        </div>

        <hr>


    </div>
    <!-- /container -->



    <script>
        $("#registBtn").click(function () {
            $.post("/login", {
                username: $("#username").val(),
                password: $("#password").val()
            }, function (result) {
                console.log(result);
                if (result == 1) {
                    /* 注册成功 */
                    alert("登陆成功");
                    window.location = '/'
                } else if (result == -1) {
                    /* 用户名占用 */
                    alert("用户不存在")

                } else if (result == -2) {
                    alert('密码错误')
                } else {
                    alert("系统错误")
                }
            })
        })
    </script>
    <%-include('./public/footer.ejs')%>