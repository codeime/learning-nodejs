    <title>Jumbotron Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">



    <style>
        body {
            padding: 60px;
        }
    </style>


</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <ul class="nav navbar-nav">
                <li class="active">
